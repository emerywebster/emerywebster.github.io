source 'https://rubygems.org'

require 'json'
require 'open-uri'

gem 'github-pages', JSON.parse(open('https://pages.github.com/versions.json').read)['github-pages']

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-mentions"
  gem "jekyll-paginate"
  gem "jekyll-redirect-from"
  gem "jekyll-sitemap"
  gem "jemoji"
end

